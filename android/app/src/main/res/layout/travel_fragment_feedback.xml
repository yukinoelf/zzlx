<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/city_selected"
    android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/feedback_content_bk"
        android:gravity="top"
        android:padding="20dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/feedback_content"
        android:textSize="@dimen/content_size"
        android:textColorHint="@color/feedback"
        android:hint="@string/feedback_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="13dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="35dp"
        android:background="@color/next_step"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/content_size"
            android:textColor="@color/feedback"
            android:layout_marginBottom="13dp"
            android:text="@string/feedback_picture_hint"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_feedback"
            android:layout_width="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_height="60dp"
            android:layout_marginBottom="28dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/feedback_confirm"
            android:textColor="@color/base_title"
            android:background="@drawable/travel_button_press_bk"
            android:id="@+id/feedback_send"/>

    </LinearLayout>


</LinearLayout>