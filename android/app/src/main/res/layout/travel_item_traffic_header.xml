<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_traffic_header_divder"
        android:background="@drawable/traffic_header_divder">
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_traffic_header_height"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/base_left_right_pad"
        android:paddingRight="@dimen/base_left_right_pad"
        android:background="@drawable/traffic_header_bk">

        <TextView
            android:text="飞机票"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/item_traffic_header_divder"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/traffic_list_header_icon"
            android:textColor="@color/traffic_head"
            android:textSize="@dimen/title_hint_size"
            android:id="@+id/traffic_type"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="(10.18)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_traffic_header_left"
            android:textColor="@color/not_clicked"
            android:textSize="@dimen/content_size"
            android:layout_toEndOf="@+id/traffic_type"
            android:id="@+id/traffic_header_date" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/traffic_select"
            android:background="@drawable/traffic_header_up"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    </LinearLayout>