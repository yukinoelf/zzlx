<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ly_select_hotel_pop"
    android:background="@color/translucent"
    android:orientation="vertical">

    <TextView
        android:text="@string/select_hotel_comprehensive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/not_clicked"
        android:paddingLeft="@dimen/item_select_sight_not_screen_left_right"
        android:gravity="center_vertical"
        android:textSize="@dimen/title_hint_size"
        android:background="@drawable/select_sight_drop_item_bk"
        android:id="@+id/select_hotel_pop_comprehensive" />

    <TextView
        android:text="@string/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/not_clicked"
        android:paddingLeft="@dimen/item_select_sight_not_screen_left_right"
        android:gravity="center_vertical"
        android:textSize="@dimen/title_hint_size"
        android:background="@drawable/select_sight_drop_item_bk"
        android:id="@+id/select_hotel_pop_distance" />

    <TextView
        android:text="@string/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/not_clicked"
        android:paddingLeft="@dimen/item_select_sight_not_screen_left_right"
        android:gravity="center_vertical"
        android:textSize="@dimen/title_hint_size"
        android:background="@drawable/select_sight_drop_item_bk"
        android:id="@+id/select_hotel_pop_price" />
</LinearLayout>
