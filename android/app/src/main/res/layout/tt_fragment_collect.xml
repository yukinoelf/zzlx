<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bk"
    android:orientation="vertical" >

    <TextView
        android:text="@string/must_fix"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:gravity="center_vertical"
        android:textSize="@dimen/title_size"
        android:textColor="@color/first_title_color"
        android:paddingLeft="@dimen/base_left_right_pad"
        android:drawableTop="@drawable/create_travel_module_div"
        android:drawableBottom="@drawable/create_travel_module_div" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height"
        android:id="@+id/collect_start_time"
        android:background="@drawable/create_travel_con_bk">

        <TextView
            android:text="@string/must_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_left_pad"
            android:textSize="@dimen/title_size"
            android:textColor="@color/first_title_color"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:id="@+id/collect_start_time_title" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bn_click_arrow"
            android:layout_marginLeft="@dimen/text_icon_between_pad"
            android:layout_marginRight="@dimen/base_left_right_pad"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/icollect_start_time_title" />

        <TextView
            android:text="@string/start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_hint_size"
            android:textColor="@color/hint_color"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/icollect_start_time_title"
            android:id="@+id/collect_start_time_hint" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/create_travel_con_div" />
    </RelativeLayout>

    <TextView
        android:text="@string/sellect_collect"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:gravity="center_vertical"
        android:textSize="@dimen/title_size"
        android:textColor="@color/first_title_color"
        android:paddingLeft="@dimen/base_left_right_pad"
        android:drawableTop="@drawable/create_travel_module_div"
        android:drawableBottom="@drawable/create_travel_module_div"
        android:id="@+id/create_travel_time_place" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height"
        android:background="@drawable/create_travel_con_bk">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_left_pad"
            android:drawableLeft="@drawable/plane_blue"
            android:textSize="@dimen/title_size"
            android:textColor="@color/first_title_color"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:id="@+id/tstart_no" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:background="@null"
            android:textSize="@dimen/title_hint_size"
            android:maxLength="6"
            android:layout_marginRight="@dimen/base_left_right_pad"
            android:hint="@string/input_your_no"
            android:textColorHint="@color/hint_color"
            android:textColor="@color/first_title_color"
            android:digits="@string/traffic_no_type"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/start_no" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/create_travel_con_div" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height"
        android:background="@drawable/create_travel_con_bk">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_left_pad"
            android:drawableLeft="@drawable/plane_blue"
            android:drawablePadding="11dp"
            android:textSize="@dimen/title_size"
            android:textColor="@color/first_title_color"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:id="@+id/tend_no" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:background="@null"
            android:textSize="@dimen/title_hint_size"
            android:maxLength="6"
            android:layout_marginRight="@dimen/base_left_right_pad"
            android:hint="@string/input_your_no"
            android:textColorHint="@color/hint_color"
            android:textColor="@color/first_title_color"
            android:digits="@string/traffic_no_type"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/end_no" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/create_travel_con_div" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/collect_add"
            android:textColor="@color/next_step"
            android:textSize="@dimen/next_step"
            android:background="@drawable/travel_button_press_bk_edge"
            android:id="@+id/collect" />
    </LinearLayout>

</LinearLayout>