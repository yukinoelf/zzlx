<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/translucent"
    android:orientation="vertical"
    android:gravity="bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mine_info_change_avatar_pad"
        android:layout_marginRight="@dimen/mine_info_change_avatar_pad"
        android:layout_marginBottom="@dimen/mine_info_change_avatar_pad"
        android:orientation="vertical"
        android:background="@drawable/mine_info_pop_bk2">

        <TextView
            android:text="拍照"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height"
            android:textSize="@dimen/title_hint_size"
            android:textColor="@color/first_title_color"
            android:gravity="center"
            android:id="@+id/mine_info_photo" />

        <TextView
            android:text="相册"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height"
            android:textSize="@dimen/title_hint_size"
            android:textColor="@color/first_title_color"
            android:gravity="center"
            android:id="@+id/mine_info_gallary" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mine_info_change_avatar_pad"
        android:layout_marginRight="@dimen/mine_info_change_avatar_pad"
        android:layout_marginBottom="@dimen/mine_info_change_avatar_pad"
        android:background="@drawable/mine_info_cancel"
        android:id="@+id/mine_info_avatar_cancel" />
</LinearLayout>
