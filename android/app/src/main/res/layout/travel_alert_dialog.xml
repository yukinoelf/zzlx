<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialog_semitransparent">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/alert_dialog_bk"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|bottom"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="23dp"
            android:textSize="15sp"
            android:textColor="@color/title"
            android:id="@+id/alert_dialog_content"
            android:layout_gravity="center_horizontal|center" />

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/alert_dialog_cancel"
                android:id="@+id/bn_alert_dialog_cancel" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/alert_dialog_confirm"
                android:id="@+id/bn_alert_dialog_confirm" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
